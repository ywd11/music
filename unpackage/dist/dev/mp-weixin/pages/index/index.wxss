  color: #a4a4a4;
}
.index .banner {
  margin: 10px -10px 0 -10px;
}
.index .banner .banner-item {
  padding: 0 10px;
  box-sizing: border-box;
  border-radius: 10px;
  position: relative;
}
.index .banner .banner-item image {
  border-radius: 10px;
  height: 100%;
  width: 100%;
}
.index .banner .banner-item .banner-tag {
  height: 20rpx;
  line-height: 20rpx;
  border-radius: 10rpx;
  color: #fff;
  padding: 5px;
  font-size: 24rpx;
  position: absolute;
  bottom: 0;
  right: 10px;
}

