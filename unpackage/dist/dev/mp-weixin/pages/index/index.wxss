.index .header .iconfont.icon-luyinshuohuashengyin {
  width: 60rpx;
  font-size: 46rpx;
}
.index .header .input {
  background-color: #f7f7f7;
  height: 60rpx;
  border-radius: 30rpx;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  font-size: 30rpx;
  text-align: center;
  color: #c8c8c8;
